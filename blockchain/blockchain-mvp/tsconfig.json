{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ]
}
